<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/rv_profile_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:background="@drawable/circle_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Ursula Gurnmeister"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/rv_date"
        app:layout_constraintLeft_toRightOf="@id/rv_profile_picture"
        app:layout_constraintTop_toTopOf="@id/rv_profile_picture" />

    <TextView
        android:id="@+id/rv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="12.02.2022"
        app:layout_constraintBottom_toBottomOf="@id/rv_profile_picture"
        app:layout_constraintLeft_toRightOf="@id/rv_profile_picture"
        app:layout_constraintTop_toBottomOf="@id/profile_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$22 Credit"
        android:layout_marginRight="10dp"
        app:layout_constraintRight_toLeftOf="@id/cardd"
        app:layout_constraintTop_toTopOf="@id/cardd"
        app:layout_constraintBottom_toBottomOf="@id/cardd"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardd"
        android:layout_width="90dp"
        android:layout_height="30dp"
        app:cardCornerRadius="5dp"
        android:backgroundTint="#4DBB86FC"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toTopOf="@id/rv_profile_picture"
        app:layout_constraintBottom_toBottomOf="@id/rv_profile_picture">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Norwood 1"
            android:layout_gravity="center"
            android:textColor="#9D5BED"
            android:textStyle="bold"/>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#4D000000"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="10dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>